{
  "name": "xp-pokemon-rom-editor",
  "version": "0.1.0",
  "private": true,
  "author": {
    "name": "Jake Fordyce",
    "email": "jakefordyce78@gmail.com",
    "url": "https://github.com/jakefordyce"
  },
  "build": {
    "appId": "com.jakefordyce.xp-pokemon-rom-editor",
    "productName": "Pokemon ROM Editor",
    "copyright": "Copyright Â© 2019 ${author}",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "icon": "./public/icon.png"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "build/icon.*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "bootstrap": "^4.4.1",
    "easy-peasy": "^3.2.3",
    "electron-is-dev": "^1.1.0",
    "react": "^16.12.0",
    "react-bootstrap": "^1.0.0-beta.16",
    "react-dom": "^16.12.0",
    "react-scripts": "^3.4.1"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "rescripts start",
    "build": "rescripts build",
    "test": "rescripts test",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently \"yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "postinstall": "electron-builder install-app-deps",
    "preelectron-pack": "yarn build",
    "electron-pack": "electron-builder build -w"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@rescripts/cli": "^0.0.13",
    "@rescripts/rescript-env": "^0.0.11",
    "concurrently": "^5.3.0",
    "electron": "^7.1.3",
    "electron-builder": "^21.2.0",
    "wait-on": "^3.3.0"
  }
}
